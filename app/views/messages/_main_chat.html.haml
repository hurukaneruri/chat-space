.main_chat
  .main-header
    .main-header__left-box
      %h2.current-group test
      %ul.member-list
        %li.member-list__member masa
    =link_to "#", class: "edit-btn" do
      Edit

  .messages

  .form
    %form.new-message
      .input-box
        %input{class: "text",placeholder: "type a message",type: "text"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file",class:"input-box__image__file"}
      %input{class: "submit-btn",type: "submit" ,name: "commit",value: "Send"}
